<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="camera.cam.DisplayActivity" >

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        android:layout_toLeftOf="@+id/relativeLayout"
        android:layout_toStartOf="@+id/relativeLayout" />

    <ImageView
    android:id="@+id/image_point_1"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"

    android:src="@drawable/point3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_point_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:src="@drawable/point3"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/image_point_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:src="@drawable/point2" />
    
    <ImageView
        android:id="@+id/image_point_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:src="@drawable/point2" />

    <ImageView
        android:id="@+id/image_point_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:src="@drawable/point"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_point_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"

        android:src="@drawable/point"
        android:visibility="gone" />

    <camera.cam.ResultDisplay
        android:id="@+id/text"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/relativeLayout"
        android:gravity="center"
        android:background="#212121"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu_image"
            android:background="@drawable/menu_image"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/settings_image"
            android:background="@drawable/settings_image"
            android:layout_below="@id/menu_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/zoom_image"
            android:background="@drawable/zoom_image"
            android:layout_below="@id/settings_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>


</RelativeLayout>
